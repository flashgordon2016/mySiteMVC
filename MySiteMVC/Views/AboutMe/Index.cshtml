@model AboutMeViewModel
@{
    ViewData["Title"] = "About Me";
}
<!--Specify which navbar button is active in menu-->
<script>
    var btn = document.getElementById('aboutMeBtn');
    btn.classList.add('active');
</script>
<div class="row">
    <div class="col"><img class="bannerImage" src="~/images/aboutMeBanner.jpg" /></div>
</div>
<div class="row">

    <div class="col-md-6">
        <h2 class="anchor"><span id="intro"></span>Hi, I'm Matt</h2>
        <p>
            I've recently graduated from Oregon State University with a 3.98/4.00 GPA in computer science, BS. I am actively seeking
            an entry-level position in software engineering and I'm always open to freelance opportunities in web development.
            I love performing detailed research, writing well-documented software, and working with others to produce simple, sustainable
            solutions to complex problems.
        </p>
        <p>
            If you have a moment, please explore this site to learn a bit more about me. Otherwise, you're more than welcome to
            <a href="https://docs.google.com/document/d/1R83Hvra5CXyLNa6aJi11ymKzMUpT88-aztU0WeAqGtg/edit?usp=sharing" target="_blank">
                check out my r&eacute;sum&eacute;.
            </a>
        </p>
    </div>
    <div class="col-md-6">
        <h2 class="anchor"><span id="experience"></span>Experience</h2>
        <ul>
            <li>Gleaning Coordinator - AmeriCorps VISTA (April 2015 - April 2016)</li>
            <li>Development Coordinator - AmeriCorps VISTA (April 2013 - April 2014)</li>
            <li>Cashier/Barista - Fletcher Village Bakery, Fletcher, NC (May 2012 - November 2012)</li>
        </ul>
    </div>
</div>
<div class="container-fluid" style="padding:0px;">
        <h2 class="anchor my-3"><span id="education" name="education"></span>Education</h2>
        <div id="myCarousel" class="carousel slide" data-interval="false">
            <div class="carousel-inner row no-gutters w-100 mx-auto">
                @{
                    var i = 0;
                    foreach (var edu in Model.Education)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item col-sm-12 col-md-4 col-lg-3 active">
                                <div class="card">
                                    @if (edu.Logo != null)
                                    {
                                        <img class="mx-auto" src="@edu.Logo" alt="Card image cap" style="max-height:150px;">
                                    }
                                    <div class="card-body">
                                        <h4 class="card-title">@Html.DisplayFor(eduModel => edu.Institution)</h4>
                                        <p class="card-text">Major: @Html.DisplayFor(eduModel => edu.Major)</p>
                                        <p class="card-text">Degree: @Html.DisplayFor(eduModel => edu.Degree)</p>
                                        <p class="card-text">GPA: @Html.DisplayFor(eduModel => edu.GPA)</p>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item col-sm-12 col-md-4 col-lg-3">
                                <div class="card">
                                    @if (edu.Logo != null)
                                    {
                                        <img class="mx-auto" src="@edu.Logo" alt="Card image cap" style="max-height:150px; ">
                                    }
                                    <div class="card-body">
                                        <h4 class="card-title">@Html.DisplayFor(eduModel => edu.Institution)</h4>
                                        <p class="card-text">Major: @Html.DisplayFor(eduModel => edu.Major)</p>
                                        <p class="card-text">Degree: @Html.DisplayFor(eduModel => edu.Degree)</p>
                                        <p class="card-text">GPA: @Html.DisplayFor(eduModel => edu.GPA)</p>
                                    </div>
                                </div>
                            </div>
                        }
                        i++;
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color:black; margin-left:-100%; height: 60px; width:20px;"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true" style="background-color:black; margin-right:-100%; height: 60px; width:20px;"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    
